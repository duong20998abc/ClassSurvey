@model IEnumerable<ClassSurvey.Domain.Entities.Teacher>

@{
    ViewBag.Title = "Danh sách giáo viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="padding-left: 10px">
    <section class="content-header">
        <h1>
            Danh sách giáo viên
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Lecturers</li>
        </ol>
    </section>
    <div class="add-teacher" style="padding-bottom: 10px; border-bottom: 1px solid gray; margin-bottom: 10px">
        <p style="padding-left: 18px; padding-top: 10px">
            <a href="/teacher/create"><button class="btn btn-primary">Thêm mới giáo viên</button></a>
        </p>
    </div>
    <table class="table table-striped table-hover" style="padding-bottom: 10px">
        <thead>
            <tr>
                <th>
                    Tên giáo viên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Điện thoại
                </th>
                <th>
                    Văn phòng
                </th>
                <th>
                    Trạng thái
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        <a href="/teacher/edit/@item.Id"><button class="btn btn-primary">Thay đổi</button></a>
                        <a href="/teacher/delete/@item.Id"><button class="btn btn-danger">Xóa</button></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

    <div class="panel panel-primary">
        <div class="panel-heading">
            Nhập dữ liệu từ File Excel
        </div>
        <form action="/teacher/import" method="post" enctype="multipart/form-data"
              style="padding: 15px">
            <input type="file" name="file" />
            <br />
            <button type="submit" value="Import" class="btn btn-success" />Import Data</button>
        </form>

    </div>

</div>
