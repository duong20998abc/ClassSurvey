@model ClassSurvey.Domain.Entities.Teacher

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    dl dt {
        padding-bottom: 10px;
    }
</style>

<div class="content-wrapper">
    <section class="content-header" style="border-bottom: 1px solid gray; padding-bottom: 10px">
        <h1>
            Thông tin giáo viên:  @Model.TeacherName
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Lecturers</li>
        </ol>
    </section>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên giáo viên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TeacherName)
            </dd>

            <dt>
                Email:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Điện thoại:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                Văn phòng:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Office)
            </dd>

            <dt>
                Trạng thái
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>

        </dl>
    </div>
    <p style="padding-left: 20px">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" }) |
        <a href="/teacher/list-teachers"">Quay lại trang danh sách giáo viên</a>
    </p>
</div>

