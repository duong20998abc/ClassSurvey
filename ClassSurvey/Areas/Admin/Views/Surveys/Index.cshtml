@model IEnumerable<ClassSurvey.Domain.Entities.SurveyQuestion>

@{
    ViewBag.Title = "Danh sách tiêu chí";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="padding-left: 10px">
    <section class="content-header">
        <h1>
            Danh sách tiêu chí cho bài khảo sát
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Surveys</li>
        </ol>
    </section>

    <div class="add-student" style="padding-bottom: 10px; border-bottom: 1px solid gray; margin-bottom: 10px">
        <p style="padding-left: 18px; padding-top: 10px">
            <a href="/survey/create"><button class="btn btn-primary">Thêm mới tiêu chí</button></a>
        </p>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Nội dung
                </th>
                <th>
                    Trạng thái
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>
       
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        <a href="/survey/edit/@item.Id"><button class="btn btn-primary">Thay đổi</button></a>
                        <a href="/survey/delete/@item.Id"><button class="btn btn-danger">Xóa</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
