@model ClassSurvey.Domain.Entities.SurveyQuestion

@{
    ViewBag.Title = "Xóa tiêu chí";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    dl dt {
        padding-bottom: 10px;
    }
</style>


<div class="content-wrapper" style="padding-left: 20px">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Surveys</li>
        </ol>
    </section>
    <h3>Bạn có chắc muốn xóa tiêu chí này không?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Nội dung:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>

            <dt>
                Trạng thái:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsDeleted):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay về trang danh sách tiêu chí", "Index", "", htmlAttributes: new { @class = "btn btn-warning" })
        </div>
        }
    </div>
</div>

