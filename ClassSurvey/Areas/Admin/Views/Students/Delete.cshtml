@model ClassSurvey.Domain.Entities.Student

@{
    ViewBag.Title = "Xóa sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    dl dt {
        padding-bottom: 10px;
    }
</style>    

<div class="content-wrapper" style="padding-left: 20px">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Students</li>
        </ol>
    </section>
    <h3>Bạn có chắc muốn xóa sinh viên này không?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã sinh viên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StudentCode)
            </dd>

            <dt>
                Tên sinh viên:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StudentName)
            </dd>

            <dt>
                Email:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Lớp học phần:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ClassByGrade)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.IsDeleted)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay về trang danh sách sinh viên", "Index", "", htmlAttributes: new { @class = "btn btn-warning" })
        </div>
        }
    </div>
</div>

