@model IEnumerable<ClassSurvey.Domain.Entities.StudentClass>

@{
    ViewBag.Title = "ShowStudentsInClass";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="padding-left: 10px">
    <section class="content-header" style="padding-bottom: 10px; border-bottom: 1px solid gray">
        <h1 style="font-weight: bold ">
            Danh sách học sinh trong lớp: @Html.DisplayFor(model => model.FirstOrDefault().Class.ClassName)
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Classes</li>
        </ol>
        <h4>Giảng viên:  @Html.DisplayFor(model => model.FirstOrDefault().Teacher.TeacherName)</h4>
    </section>
    <br />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Mã sinh viên
                </th>
                <th>
                   Tên sinh viên
                </th>
                <th>
                    Email
                </th>
                <th>
                    Lớp học phần
                </th>
                <th>Thao tác</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.StudentCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.StudentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Student.ClassByGrade)
                    </td>
                    <td>
                        @Html.ActionLink("Đánh giá môn học", "ShowSurveyResultByStudent", new {id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>


