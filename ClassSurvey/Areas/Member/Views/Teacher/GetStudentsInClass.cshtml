@model IEnumerable<ClassSurvey.Domain.Entities.StudentClass>
@{
    ViewBag.Title = "Danh sách sinh viên trong lớp";
    Layout = "~/Areas/Member/Views/Shared/_LayoutMember.cshtml";
}

@Html.Partial("_HeaderTeacherPartialView")

<div class="container-fluid" id="page-content" style="padding-left: 10px">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb mt-3">
            <li class="breadcrumb-item active" aria-current="page"><a href="/teacher/list-classes">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Danh sách sinh viên trong lớp</li>
        </ul>
    </nav>
    <br />
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_AsideMenuTeacherPartialView")
        </div>
        <div class="col-md-9">
            <div class="header-content" style="border-bottom: 1px solid gray">
                <h3 style="padding-bottom: 10px">Danh sách học sinh trong lớp: @Model.FirstOrDefault().Class.ClassName</h3>
                <ul style="list-style-type: none; font-weight: bold">
                    <li>Giảng viên:  @Html.DisplayFor(model => model.FirstOrDefault().Teacher.TeacherName)</li>
                    <li>Mã lớp học:  @Html.DisplayFor(model => model.FirstOrDefault().Class.ClassCode)</li>
                </ul>
            </div>
            <br />
            <table class="table table-striped table-hover table-bordered" style="padding-top: 20px">
                <thead>
                    <tr>
                        <th>
                            Mã sinh viên
                        </th>
                        <th>
                            Tên sinh viên
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Lớp học phần
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.StudentCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.StudentName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Student.ClassByGrade)
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        $('.table').DataTable();
    });
</script>