@model IEnumerable<ClassSurvey.Domain.Entities.StudentClass>

@{
    ViewBag.Title = "Trang chủ giáo viên";
    Layout = "~/Areas/Member/Views/Shared/_LayoutMember.cshtml";
}

@Html.Partial("_HeaderTeacherPartialView")
<div id="page-content" class="container-fluid">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb mt-3">
            <li class="breadcrumb-item active" aria-current="page"><a href="/teacher/list-classes">Trang chủ</a></li>
        </ul>
    </nav>
    <div class="row">
        <div class="col-md-3">
            @Html.Partial("_AsideMenuTeacherPartialView")
        </div>
        <div class="col-md-9">
            <h4><br></h4>
            <ul class="list-group">
                <li class="list-group-item p-0 pb-3 border-0">
                    <button class="btn btn-dark btn-block rounded-0" data-toggle="collapse" data-target="#HK11819">
                        Danh sách lớp học đang giảng dạy
                    </button>
                    <div id="HK11819" class="collapse show" aria-expanded="true">
                        <table class="table table-hover table-striped table-bordered m-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Mã lớp học</th>
                                    <th scope="col">Tên lớp học</th>
                                    <th scope="col">Số tín chỉ</th>
                                    <th scope="col">Học kỳ</th>
                                    <th scope="col">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>               
                                <tr>
                                    <td>@Html.DisplayFor(model => model.FirstOrDefault().Class.ClassCode)</td>
                                    <td>@Html.DisplayFor(model => model.FirstOrDefault().Class.ClassName)</td>
                                    <td>@Html.DisplayFor(model => model.FirstOrDefault().Class.NumberOfDegrees)</td>
                                    <td>Học kỳ @Html.DisplayFor(model => model.FirstOrDefault().Class.Semester)</td>
                                    <td>
                                        @Html.ActionLink("Danh sách sinh viên", "GetStudentsInClass", new { id = Model.FirstOrDefault().ClassId }, htmlAttributes: new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Kết quả đánh giá", "ShowSurveyResult", new { id = Model.FirstOrDefault().ClassId }, htmlAttributes: new { @class = "btn btn-primary" })
                                    </td>
                                </tr>
                             </tbody>
                        </table>
                    </div>
                </li>

            </ul>
        </div>
    </div>
    <br>
</div>